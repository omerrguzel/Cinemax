<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/dark"
    android:id="@+id/cardViewMovieGeneric"
    android:layout_marginBottom="16dp"
    android:layout_width="350dp"
    android:layout_height="147dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="112dp"
            android:background="@color/dark"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewGenericPoster"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                tools:src="@drawable/background_example"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewRatingGeneric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imageViewGenericPoster"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_rating_textview"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/orange"
                android:textSize="12sp"
                app:drawableLeftCompat="@drawable/ic_star"
                app:drawableTint="@color/orange"
                tools:text="4.5" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark"
            android:paddingHorizontal="16dp"
            android:paddingTop="5dp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Spider-Man No Way Home"
                android:maxLines="2"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:paddingEnd="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="6dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                tools:text="2021"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_genre"
                    android:drawablePadding="6dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/montserrat"
                    android:textSize="12sp"
                    tools:text="Action  |"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewMediaType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="12sp"
                    android:text="@string/movie"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    


</com.google.android.material.card.MaterialCardView>