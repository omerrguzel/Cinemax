<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/dark"
    android:id="@+id/cardViewMovieGeneric"
    android:layout_marginBottom="@dimen/_16sdp"
    android:layout_width="@dimen/_350sdp"
    android:layout_height="@dimen/_147sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="@dimen/_112sdp"
            android:background="@color/dark"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewGenericPoster"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                tools:src="@drawable/background_example"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewRatingGeneric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imageViewGenericPoster"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/background_rating_textview"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/montserrat"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/orange"
                android:textSize="@dimen/_12ssp"
                app:drawableLeftCompat="@drawable/ic_star"
                app:drawableTint="@color/orange"
                tools:text="4.5" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingTop="@dimen/_5sdp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Spider-Man No Way Home"
                android:maxLines="2"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/white"
                android:paddingEnd="@dimen/_8sdp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/grey"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_12ssp"
                tools:text="2021"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_genre"
                    android:drawablePadding="@dimen/_6sdp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_12ssp"
                    tools:text="Action  |"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewMediaType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_12ssp"
                    android:text="Movie"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    


</com.google.android.material.card.MaterialCardView>